{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": [
        "validation/**/*.ts",
        "app.ts",
        "bin/www.ts",
        "interfaces/**/*.ts",
        "routes/**/*.ts",
        "models/**/*.ts",
        "scripts/**/*.js",
        "services/**/*.ts",
        "utils/**/*.ts",
        "controllers/**/*.ts",
        "middlewares/**/*.ts"
    ]
}
