{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "watch": true
  },
  "include": [
    "app.ts",
    "bin/www.ts",
    "interfaces/**/*.ts",
    "routes/**/*.ts"
  ]
}
